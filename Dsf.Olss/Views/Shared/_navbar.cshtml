<header class="header bg-light dker bg-gradient">
    <div class="navbar-collapse pull-in">
        <p class="navbar-left">@ViewBag.Title</p>

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a id="user-info" href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="thumb-sm avatar pull-left m-t-n-xs m-r-xs">
                        <img src="@Url.Content("~/Content/img/avatar_default.jpg")">
                    </span>

                    @Session["Username"] - @Session["branchname"]
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu animated fadeInLeft">
                    <li>
                        <a class="no-hover-bg text-sm">
                            <span class="m-b-none">
                                2.0 Second Released<br>
                            </span>
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a class="no-hover-bg text-sm">
                            <span class="m-b-none">
                                <small class="text-muted">@Html.Partial("_time")</small>
                            </span>
                        </a>
                    </li>
                    <li class="divider"></li>

                    @if (Session["Role"].ToString() == Dsf.Lib.Constant.OlssRole.Admin)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Role")">Role</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "User")">User</a>
                        </li>
                        <li class="divider"></li>
                    }
 
                    <li>
                        <a href="@Url.Action("LogOff", "Account")">Sign Out</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</header>
