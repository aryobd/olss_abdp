@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "We are Sorry!";
	string messageError = "";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <b>We are Sorry!</b> Something happen with your application, please contact Administrator, thank you.  { Additonal message : "@( messageError = ViewBag.Message ?? "")" }
            </div>
        </div>
    </div>
</div>

