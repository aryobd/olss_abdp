<!-- Invoice Data Pop Up-->
<div class="modal fade" id="invoiceReceiptModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h5 class="modal-title" id="myModalLabel"><strong>Invoice Data</strong></h5>
            </div>
            <div class="tab-pane" id="datatable">
                <section class="panel">
                    <div class="table-responsive">
                        <table id="invoice-receipt-list" class="table table-striped m-b-none">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Usage Period</th>
                                    <th style="text-align:right;">Amount</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
