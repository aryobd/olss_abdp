@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Report Installment Receipt";
    var id = ViewBag.Id;
    var idInv = ViewBag.IdInvoice;
}
@if (idInv > 0) // S0107780 - CR View Invoice (7 days)
{
    <a href="@Url.Action("ListInvoiceStatusApproval", "BILCreation", new { id = idInv })" class="btn btn-white"><i class="fa fa-chevron-left"></i> Back</a><br><br>
}
else
{
    <a href="@Url.Action("Index", "BILSchedule" )" class="btn btn-white"><i class="fa fa-chevron-left"></i> Back</a><br><br>
}

@Html.Partial("ReportViewer")
<a title="" class="btn btn-white" href="@Url.Action("ReportInstallmentInvoice", "BILCreation", new {id})" class=" btn btn-white" data-original-title=""><i class="fa fa-chevron-left"></i> Previous Page</a>

@if (ViewBag.IsHaveMaintenanceBilling == true)
{
    <a title="" class="btn btn-white" href="@Url.Action("ReportMaintenanceInvoice", "BILCreation", new {id})" class=" btn btn-white" data-original-title=""><i class="fa fa-chevron-right"></i> Next Page</a>
}
else
{
    <a title="" class="btn btn-white" href="@Url.Action("ReportReceiveLetter", "BILCreation", new { id })" class=" btn btn-white" data-original-title=""><i class="fa fa-chevron-right"></i> Next Page</a>
}

