<a href="@Url.Action("Index")" class="btn btn-white"><i class="fa fa-chevron-left"></i> Back</a><br><br>
<a href="" class="btn btn-white previous"><i class="fa fa-chevron-left"></i> previous</a><a href="" class="btn btn-white next"><i class="fa fa-chevron-right"></i> next</a><br><br>
@Html.Partial("ReportViewer")

<script>
    var root = location.protocol + '//' + location.host + '@Url.Content("~")';
    $(document).ready(function () {


        var url = document.URL;
        var split = url.split("/");
        var bastTotal = '@(ViewBag.BastTotal != null ? (int)ViewBag.BastTotal : 0 )';
        var methodName = '@ViewBag.MethodName';

        var idPrep = split[6];

        var previous = split[7] - 1;
        var next = parseInt(split[7]) + 1;
        if (previous == 0) {
            $(".previous").prop("disabled", true);
        } else {
            $(".previous").prop("href", root + "MGTPreparationUnit/" + methodName + "/" + idPrep + "/" + previous);
        }

        if (next == ++bastTotal) {
            $(".next").prop("disabled", true);
        } else {
            $(".next").prop("href", root + "MGTPreparationUnit/" + methodName + "/" + idPrep + "/" + next);
        }

        console.log(bastTotal);


    });
</script>