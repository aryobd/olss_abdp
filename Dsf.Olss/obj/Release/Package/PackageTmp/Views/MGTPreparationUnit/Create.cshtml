    <script src="@Url.Content("~/Content/ui-framework/js/autoNumeric-1.9.18.js")"></script>
    <script src="@Url.Content("~/Content/js/Olss.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/select2/select2.min.js")"></script>
    <script src="~/Content/js/BASTUnitReceive.js"></script>

    <script type="text/javascript">
        // This must be applied to a form (or an object inside a form).
        jQuery.fn.addHidden = function (name, value) {
            return this.each(function () {
                var input = $("<input>").attr("type", "hidden").attr("name", name).val(value);
                $(this).append($(input));
            });
        };

        //Confirmation Modal
        $('input[name="statusButton"]').on('click', function (e) {
            var submitvalue = $(this).val();

            $('.msgModal').text(submitvalue);

            var startDate = $('#StartInsurance').val();
            var endDate = $('#EndInsurance').val();

            if (startDate !== '' && endDate !== '') {
                if (checkDate()) {
                    e.preventDefault();
                    goToTop();
                    return false;
                }
            }
            return true;
        });

        $('#confirmModal').click(function (e) {
            $(this).prop('disabled', true);

            var createBASTOption = "";
            var isAllAccessoriesPO = @Html.Raw(Json.Encode(Model.IsAllAccessoriesPO));
            if(isAllAccessoriesPO) {
                var isCreateBASTOptionChecked = $("input[name='CreateBASTOption']:checked").length != 0;
                if (!isCreateBASTOptionChecked) {
                    var html = '<span class="field-validation-error" data-valmsg-replace="true">The Create BAST Option field is required.</span>';
                    $("input[name='CreateBASTOption']:eq(0)").parent().parent().after(html);
                    $("#myModal").modal('toggle');
                    goToTop();
                    return false;
                }

                var isErrorExist = $(".field-validation-error").length != 0;
                if (isErrorExist) {
                    $(".field-validation-error").remove();
                }

                createBASTOption = $("input[name='CreateBASTOption']:checked").val();
            }

            UpdateNames();

            var submitvalue = $('input[name="statusButton"]').val();
            $('form:first').addHidden('statusButton', submitvalue).addHidden('createBASTOption', createBASTOption).trigger('submit');
        });

        $('.datepicker-input').datepicker({
            format: 'mm/dd/yyyy'
        });

        $('#StartSTNK2, #EndSTNK2').css('cursor', '').removeClass('datepicker-input date-validation');

        // Global variable for BASTUnitReceive.js
        var serverRoot = '@Url.Content("~")';

    </script>
}