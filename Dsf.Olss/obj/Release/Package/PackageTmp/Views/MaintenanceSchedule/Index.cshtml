    //PrintReport
    $('.buttonprint').on('click', function (e) {
        e.preventDefault();
        var ddlSearchCriteria = $("#ddlSearchCriteria").val();
        var txtSearch = $("#txtSearch").val();
        var txtStartDate = $("#txtStartDate").val();
        var txtEndDate = $("#txtEndDate").val();

