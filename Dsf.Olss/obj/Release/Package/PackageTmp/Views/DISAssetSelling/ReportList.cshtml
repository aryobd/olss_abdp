@model Dsf.Olss.Models.DISAssetSellingViewModel
@using System.Web.UI.WebControls;
@using Dsf.Lib.Constant

@using (Html.BeginForm("ReportList", "DISAssetSelling", FormMethod.Post, new { @data_validate = "parsley" }))
{
<section class="panel">
    <header class="panel-heading font-bold">Report</header>
    <div class="panel-body">
        <div class="col-lg-12">
            <div class="form-group">
                <div class="col-lg-6">
                    <ul class="list-group">
                        @*<li class="list-group-item" hidden>
                            <label>Form Penjualan Asset</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "FormJualAsset" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>*@
                        <li class="list-group-item">
                            <label>Profit Analysis</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "ProfitAnalysis" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>
                        <li class="list-group-item">
                            <label>Memo Pengajuan</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "MemoPenjualan" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>
                        @*Add by Fadilah Aditya 16/12/2019*@
                        @if (Model.MemoType == "COP" && Model.IsSubmitted == true)
                        { 
                            <li class="list-group-item">
                            <label>Perjanjian Jual Beli</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "PerjanjianJualBeli" })" class="pull-right islink text-info text-sm">Download</a>
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                            @Ajax.ActionLink("Update", "UpdateJualBeli",
                                               new { IdTb_DIS_AssetSelling = @Model.IdTb_DIS_AssetSelling },
                                            new AjaxOptions
                                            {
                                                UpdateTargetId = "detailsJualBeli",
                                                InsertionMode = InsertionMode.Replace,
                                                OnSuccess = "popupJualBeli()"
                                            }, new { @class = "Update text-info" })
                            </li>
                        }
                        @*End by Fadilah Aditya 16/12/2019*@
                        @if (Model.MemoType == "AUC")
                        {
                            <li class="list-group-item">
                                <label>Memo Auction</label>&nbsp;
                                <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "MemoAuction" })" class="pull-right islink text-info text-sm">Download</a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="col-lg-6">
                    <ul class="list-group">
                        @*<li class="list-group-item" hidden>
                            <label>Lampiran Form Penjualan Asset</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { Id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "FormJualAssetLampiran" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>*@
                        <li class="list-group-item">
                            <label>Lampiran Profit Analysis</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "ProfitAnalysisLampiran" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>
                        <li class="list-group-item">
                            <label>Lampiran Memo Pengajuan</label>&nbsp;
                            <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "MemoPenjualanLampiran" })" class="pull-right islink text-info text-sm">Download</a>
                        </li>
                        @if (Model.MemoType == "AUC")
                        {
                            <li class="list-group-item">
                                <label>Lampiran Memo Auction</label>&nbsp;
                                <a href="@Url.Action("Report", "DISAssetSelling", new { id = (ViewContext.RouteData.Values["id"]).ToString(), reportName = "MemoAuctionLampiran" })" class="pull-right islink text-info text-sm">Download</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
}
<div id="detailsJualBeli">
</div>

@section Scripts{
    <script src="@Url.Content("~/Content/ui-framework/js/jquery-multiple.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/autoNumeric-1.9.18.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/parsley/parsley.min.js")"></script>
    <script src="@Url.Content("~/Content/js/Olss.js")"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="@Url.Content("~/Content/js/DISAssetSelling.js")"></script>
    <script src="@Url.Content("~/Content/js/DISProfitAnalysis.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/jquery.maskedinput.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/jquery.unobtrusive-ajax.min.js")"></script>
}
