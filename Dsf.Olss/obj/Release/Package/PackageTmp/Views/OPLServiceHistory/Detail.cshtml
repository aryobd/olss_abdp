@model Dsf.Olss.Models.OPLServiceHistoryViewModel
@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Service History Inquiry Details";
}
@section Styles{
    <link rel="stylesheet" href=@Url.Content("~/Content/ui-framework/js/datatables/datatables.css") type="text/css" />
}

@if (Model.IsDraft == true && Model.IsValid == false)
{
    <label class="label label-default label-lg pull-right">draft</label>
}

@if (Model.IsDraft == false && Model.IsValid == true)
{
    <label class="label label-success label-lg pull-right">valid</label>
}

@if (Model.IsValid == false && Model.IsDraft == false)
{
    <label class="label label-default label-lg pull-right">invalid</label>
}

<a href="@Url.Action("Index", "OPLServiceHistory")" class=" btn btn-white"><i class="fa fa-chevron-left"></i> Back</a>
<hr>
@Message.Display(ViewBag.Success, ViewBag.Error)

<div class="panel label-panel">
    <div class="row" style="padding-bottom:10px;">
        <div class="col-xs-6 col-sm-3">
            <div class="font-bold" style="padding-left:15px; float:left;"><i class="fa fa-user text-danger"></i> Created by</div><div style="float:left; padding-left:15px;">@(Model.CreateBy)</div>
        </div>
        <div class="col-xs-6 col-sm-3">
            <div class="font-bold" style="padding-left: 15px; float: left;"><i class="fa fa-calendar text-danger"></i> Created Date</div><div style="float: left; padding-left: 15px;">@(String.Format("{0:MM/dd/yyyy}", Model.CreateDate))</div>
        </div>
        <div class="col-xs-6 col-sm-3">
            <div class="font-bold" style="padding-left: 15px; float: left;"><i class="fa fa-user text-danger"></i> Last Modified By</div><div style="float: left; padding-left: 15px;">@(Model.LastModifiedBy)</div>
        </div>
        <div class="col-xs-6 col-sm-3">
            <div class="font-bold" style="padding-left: 15px; float: left;"><i class="fa fa-calendar text-danger"></i> Last  Modified Date</div><div style="float: left; padding-left: 15px;">@(String.Format("{0:MM/dd/yyyy}", Model.LastModified))</div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Detail", "OPLServiceHistory", FormMethod.Post, new { @data_validate = "parsley" }))
{

    <!-- Basic Information -->
    <section class="panel">
        <header class="panel-heading font-bold">General Information of Service</header>
        <div class="panel-body">
            @Html.TextBoxFor(o => o.IdOPLServiceHistory, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.TerminateDate, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.IsDraft, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.IsValid, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.valid, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.draft, null, new { @type = "hidden" })
            @Html.TextBoxFor(o => o.ConnId, null, new { @type = "hidden" })
            <div class="row">
                <!-- Quotation Number -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Agreement Number</label>
                        <div class="input-group">@(Model.AgreementNumber)</div>
                    </div>
                </div>

                <!-- Quotation Number -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Previous Agreement Number</label>
                        <div class="input-group">@(Model.PreviousAgreementNumber)</div>
                    </div>
                </div>

                <!-- Agreement Date -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Agreement Date (mm/dd/yyyy)</label>
                        <div class="input-group">@(String.Format("{0:MM/dd/yyyy}", Model.AgreementDate))</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Police Number / invoice Number -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Police Number / invoice Number</label>
                        <div class="input-group">@(Model.IdentityPoliceNumber)</div>
                    </div>
                </div>

                <!-- Engine Number -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Engine Number</label>
                        <div class="input-group">@(Model.EngineNumber)</div>
                    </div>
                </div>

                <!-- Mintenance Type -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Maintenance Type</label>
                        @Html.TextBoxFor(o => o.MaintenanceType, null, new { @type = "hidden" })
                        <div class="input-group">@(Model.MaintenanceTypeName)</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Service History Detail -->
    <section class="panel">
        <header class="panel-heading">Service History Details</header>
        <div class="panel-body">

            <div class="row">
                <!-- Periodic Maintenance -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Periodic Maintenance</label>
                        <div class="input-group">@Html.CheckBoxFor(m => m.IsPerodicMaintenance)</div>
                    </div>
                </div>

                <!-- Customer Service Desk (CSD) -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Customer Service Desk (CSD)</label>
                        <div class="input-group">@Html.CheckBoxFor(m => m.IsCServiceDesk)</div>
                    </div>
                </div>

                <!-- Irregular Maintenance -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Irregular Maintenance</label>
                        <div class="input-group">@Html.CheckBoxFor(m => m.IsIregularMaintenance)</div>
                    </div>
                </div>
                <!-- Workshop -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Workshop</label>
                        <div class="input-group">
                            @Html.TextBoxFor(o => o.SuplierCode, null, new { @type = "hidden" })
                            @Html.TextBoxFor(o => o.SupplierName, null, new { @class = "form-control", @readonly = "readonly", @data_maxlength = "50", @data_required = "true", @placeholder = "Workshop", @parsley_error_container = "input-group", @tabindex = "1" })
                            <span class="input-group-btn">
                                <button id="btnLoadSupplier" class="btn btn-white" data-toggle="modal" data-target="#supplierModal" type="button" onclick="LoadSupplier()">...</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Service Date -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Service Date (mm/dd/yyyy)</label>
                        <div class="input-group">
                            @Html.TextBoxFor(o => o.ServiceDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker-input", @placeholder = "Service Date (mm/dd/yyyy)", data_date_format = "mm/dd/yyyy", @data_required = "true" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(o => o.ServiceDate)
                    </div>
                </div>

                <!-- Customer Service Desk (CSD) -->
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Actual Milleage (KM)</label>
                        <div class="input-group">
                            @Html.TextBoxFor(o => o.MonthlyMileage, null, new { @class = "form-control numbersOnly", @placeholder = "Actual Milleage (KM)", @data_required = "true", @data_maxlength = "32" })
                            <span class="input-group-addon">Km</span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="line line-dashed"></div>


            <div id="alert_placeholder"></div>
            <div class="row">
                <div class="col-lg-2">
                    <p class="font-bold text-muted text-sm">Main Implementation Item</p>
                    <a href="#" id="btnAddItem" data-toggle="modal" data-target="#itemModal" onclick="OpenAddItemModal()" class="btn btn-default btn-sm">Add</a>
                </div>
                <div class="col-lg-2">
                    &nbsp;
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="SubTotal">Sub Total</label>
                        <div class="input-group">
                            <span class="input-group-addon">Rp</span>
                            @Html.TextBoxFor(o => o.SubTotal, "{0:N0}", new { @class = "form-control currenciesOnly", @readonly = "readonly", @placeholder = "Sub Total", @data_maxlength = "23" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="PPNTax">PPN Tax (10%)</label>
                        <div class="input-group">
                            <span class="input-group-addon">Rp</span>
                            @Html.TextBoxFor(o => o.PPNTax, "{0:N0}", new { @class = "form-control currenciesOnly", @readonly = "readonly", @placeholder = "PPN Tax (10%)", @data_maxlength = "23" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="PPHTax">PPH Tax (2%)</label>
                        <div class="input-group">
                            <span class="input-group-addon">Rp</span>
                            @Html.TextBoxFor(o => o.PPHTax, "{0:N0}", new { @class = "form-control currenciesOnly", @readonly = "readonly", @placeholder = "PPH Tax (2%)", @data_maxlength = "23" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="TotalIncludeTax">Total</label>
                        <div class="input-group">
                            <span class="input-group-addon">Rp</span>
                            @Html.TextBoxFor(o => o.TotalIncludeTax, "{0:N0}", new { @class = "form-control currenciesOnly", @readonly = "readonly", @placeholder = "Total", @data_maxlength = "23" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="line line-dashed"></div>

            <div class="tab-pane" id="datatable">
                <section class="panel">
                    <div class="table-responsive">
                        <table id="item-list" class="table table-striped m-b-none" data-ride="datatables">
                            <thead>
                                <tr>
                                    <th>Implementation Item</th>
                                    <th>Labor Cost Amount</th>
                                    <th>PPn</th>
                                    <th>PPh</th>
                                    <th>Remarks</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </section>
            </div>

            <div class="line pull-in"></div>

            <p class="font-bold text-muted text-sm">Parts Item</p>
            <a href="#" id="btnAddPart" data-toggle="modal" data-target="#partModal" onclick="OpenAddPartModal()" class="btn btn-default btn-sm">Add</a>
            <div class="line line-dashed"></div>

            <div class="tab-pane" id="datatable">
                <section class="panel">
                    <div class="table-responsive">
                        <table id="part-list" class="table table-striped m-b-none" data-ride="datatables">
                            <thead>
                                <tr>
                                    <th width="10%">Parts Code</th>
                                    <th>Parts Name</th>
                                    <th>Amount</th>
                                    <th>Quantity</th>
                                    <th>PPn</th>
                                    <th>PPh</th>
                                    <th>Remarks</th>
                                    <th width="20%">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </section>
            </div>

        </div>
        <footer class="panel-footer bg-light lter">
            @if (Model.TerminateDate == null)
            {
                @StateButton.OPLServiceHistoryStateButton("detail", Model.IsDraft, Model.IsValid, false)
            }
        </footer>
    </section>
}
@{
    Html.RenderPartial("SupplierModalPopUp");
    Html.RenderPartial("ItemModalPopUp");
    Html.RenderPartial("PartModalPopUp");
    Html.RenderPartial("DeleteItemConfirmation");
    Html.RenderPartial("DeletePartConfirmation");
}

@section Scripts{
    <script src="@Url.Content("~/Content/ui-framework/js/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/datepicker/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/parsley/parsley.min.js")"></script>
    <script src="@Url.Content("~/Content/js/Olss.js")"></script>
    <script src="@Url.Content("~/Content/ui-framework/js/bootbox/bootbox.min.js")"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        var OPLServiceHistoryHub = $.connection.OPLServiceHistory;
        var OPLSHistoryItemHub = $.connection.OPLSHistoryItem;
        var OPLSHistoryPartHub = $.connection.OPLSHistoryPart;
        var confirm = 0;

        OPLServiceHistoryHub.client.OnSaveLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.confirm("Data has been changes by other user, do you want to refresh the page?", function (result) {
                    if (result != false) {
                        location.reload();
                    }
                });
            }
        };

        OPLServiceHistoryHub.client.OnStatusLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.alert("Status has been changes by other user, you will be redirected to list page ..", function () {
                    window.location.href = '@Url.Action("Index", "OPLServiceHistory")';
                });
            }
        };

        OPLServiceHistoryHub.client.OnStatusValidateLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.alert("Status has been changes by other user, you will be redirected to list page ..", function () {
                    window.location.href = '@Url.Action("Index", "OPLServiceHistory")';
                });
            }
        };

        OPLServiceHistoryHub.client.OnStatusInvalidateLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.alert("Status has been changes by other user, you will be redirected to list page ..", function () {
                    window.location.href = '@Url.Action("Index", "OPLServiceHistory")';
                });
            }
        };

        OPLServiceHistoryHub.client.OnDeleteLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.alert("Data has been deleted by other user, you will be redirected to list page ..", function () {
                    window.location.href = '@Url.Action("Index", "OPLServiceHistory")';
                });
            }
        };

        OPLSHistoryItemHub.client.OnSaveLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.confirm("Data has been changes by other user, do you want to refresh the page?", function (result) {
                    if (result != false) {
                        location.reload();
                    }
                });
            }
        };

        OPLSHistoryPartHub.client.OnSaveLock = function (id) {
            if (parseInt(@Model.IdOPLServiceHistory) === id) {
                bootbox.confirm("Data has been changes by other user, do you want to refresh the page?", function (result) {
                    if (result != false) {
                        location.reload();
                    }
                });
            }
        };

        $.connection.hub.start().done(function () {
            var myClientId = $.connection.hub.id;
            $('#ConnId').val(myClientId);
        });

        $("#IsPerodicMaintenance").on("click", function (e) {
            var checkbox = $(this);
            if (!checkbox.is(":checked")) {
                e.preventDefault();
                return false;
            }
        });
        $("#IsCServiceDesk").on("click", function (e) {
            var checkbox = $(this);
            if (!checkbox.is(":checked")) {
                e.preventDefault();
                return false;
            }
        });
        $("#IsIregularMaintenance").on("click", function (e) {
            var checkbox = $(this);
            if (!checkbox.is(":checked")) {
                e.preventDefault();
                return false;
            }
        });

        $('#IsPerodicMaintenance').change(function () {
            if (this.checked) {
                $('#IsCServiceDesk').removeAttr('checked');
                $('#IsIregularMaintenance').removeAttr('checked');
            }
        });
        $('#IsCServiceDesk').change(function () {
            if (this.checked) {
                $('#IsPerodicMaintenance').removeAttr('checked');
                $('#IsIregularMaintenance').removeAttr('checked');
            }
        });
        $('#IsIregularMaintenance').change(function () {
            if (this.checked) {
                $('#IsPerodicMaintenance').removeAttr('checked');
                $('#IsCServiceDesk').removeAttr('checked');
            }
        });

        $(document).ready(function () {
            var valid = $('#valid').val();
            var draft = $('#draft').val();

            if ((valid == 1) || ((draft == 0) && (valid == 0))) {
                $('#btnAddItem').attr('disabled', 'disabled');
                $('#btnAddPart').attr('disabled', 'disabled');
                $('#IsPerodicMaintenance').attr('disabled', 'disabled');
                $('#IsCServiceDesk').attr('disabled', 'disabled');
                $('#IsIregularMaintenance').attr('disabled', 'disabled');
                $('#btnLoadSupplier').attr('disabled', 'disabled');
                $('#ServiceDate').attr('disabled', 'disabled');
                $('#MonthlyMileage').attr('disabled', 'disabled');
            }

            if ($('#TerminateDate').val() != '') {
                $('#btnAddItem').attr('disabled', 'disabled');
                $('#btnAddPart').attr('disabled', 'disabled');
                $('#IsPerodicMaintenance').attr('disabled', 'disabled');
                $('#IsCServiceDesk').attr('disabled', 'disabled');
                $('#IsIregularMaintenance').attr('disabled', 'disabled');
                $('#btnLoadSupplier').attr('disabled', 'disabled');
                $('#ServiceDate').attr('disabled', 'disabled');
                $('#MonthlyMileage').attr('disabled', 'disabled');
            }

            $(".currenciesOnly").on('keydown', currenciesOnly)
                                      .on('blur', function () { $(this).formatCurrency(); });
            $(".numbersOnly").on('keydown', numbersOnly);

            $('#itemForm').parsley();
            var counter = 1;

            $('#itemForm').submit(function (e) {
                e.preventDefault();
                if ($('#itemForm').parsley('isValid')) {

                    var implementationItems = $('#ImplementationItems').val();

                    var laborCostAmount = $('#LaborCostAmount').val();

                    var ItemPPnTax = $('#ItemPPnTax').val();

                    var ItemPPhTax = $('#ItemPPhTax').val();

                    var itemRemarks = $('#ItemRemarks').val();

                    var idOPLSHistoryItems = $('#IdOPLSHistoryItems').val();

                    var t = $('#item-list').dataTable();
                    if ($('#itemSubmitId').text() === "Add") {
                        confirm = 1;
                        var getUrlAddItem = '@Url.Action("AddItem", "OPLServiceHistory")';
                        $.ajax({
                            type: "POST",
                            url: getUrlAddItem,
                            cache: false,
                            data: {
                                idOPLSHistoryItems: idOPLSHistoryItems,
                                implementationItems: implementationItems,
                                laborCostAmount: laborCostAmount,
                                Itemppntax: ItemPPnTax,
                                itempphtax: ItemPPhTax,
                                itemRemarks: itemRemarks,
                                idOPLServiceHistory: $('#IdOPLServiceHistory').val(),
                                connId: $('#ConnId').val()
                            },
                            success: function (data) {
                                $('#itemModal').modal('hide');
                                t.fnDraw();
                                $('#SubTotal').val(data.SubTotal);
                                $("#SubTotal").formatCurrency();
                                $('#PPNTax').val(data.PPNTax);
                                $("#PPNTax").formatCurrency();
                                $('#PPHTax').val(data.PPHTax);
                                $("#PPHTax").formatCurrency();
                                $('#TotalIncludeTax').val(data.TotalIncludeTax);
                                $("#TotalIncludeTax").formatCurrency();
                                bootstrap_alert.success("The data has been successfully added");
                                setTimeout(function () { confirm = 0; }, 3000);
                            }
                        });
                    } else {
                        confirm = 1;
                        var getUrlEditItem = '@Url.Action("EditItem", "OPLServiceHistory")';
                        $.ajax({
                            type: "POST",
                            url: getUrlEditItem,
                            cache: false,
                            data: {
                                idOPLSHistoryItems: idOPLSHistoryItems,
                                implementationItems: implementationItems,
                                laborCostAmount: laborCostAmount,
                                Itemppntax: ItemPPnTax,
                                itempphtax: ItemPPhTax,
                                itemRemarks: itemRemarks,
                                idOPLServiceHistory: $('#IdOPLServiceHistory').val(),
                                connId: $('#ConnId').val()
                            },
                            success: function (data) {
                                $('#itemModal').modal('hide');
                                t.fnDraw();
                                $('#SubTotal').val(data.SubTotal);
                                $("#SubTotal").formatCurrency();
                                $('#PPNTax').val(data.PPNTax);
                                $("#PPNTax").formatCurrency();
                                $('#PPHTax').val(data.PPHTax);
                                $("#PPHTax").formatCurrency();
                                $('#TotalIncludeTax').val(data.TotalIncludeTax);
                                $("#TotalIncludeTax").formatCurrency();
                                bootstrap_alert.success("The data has been successfully saved");
                                setTimeout(function () { confirm = 0; }, 3000);
                            }
                        });
                    }


                }
            });

            $('#partForm').parsley();

            $('#partForm').submit(function (e) {
                e.preventDefault();
                if ($('#partForm').parsley('isValid')) {

                    var partCode = $('#PartCode').val();

                    var partName = $('#PartName').val();

                    var typeOfAction = $('#TypeOfAction').val();

                    var quantity = $('#Quantity').val();
                    var amount = $('#Amount').val();

                    var partPPnTax = $('#partPPnTax').val();

                    var partPPhTax = $('#partPPhTax').val();

                    var partRemarks = $('#PartRemarks').val();

                    var idOPLSHistoryParts = $('#IdOPLSHistoryParts').val();
                    var t = $('#part-list').dataTable();
                    if ($('#partSubmitId').text() == "Add") {
                        confirm = 1;
                        var getUrlAddPart = '@Url.Action("AddPart", "OPLServiceHistory")';
                        $.ajax({
                            type: "POST",
                            url: getUrlAddPart,
                            cache: false,
                            data: {
                                partCode: partCode,
                                partName: partName,
                                typeOfAction: typeOfAction,
                                quantity: quantity,
                                amount: amount,
                                partppntax: partPPnTax,
                                partpphtax: partPPhTax,
                                partRemarks: partRemarks,
                                idOPLServiceHistory: $('#IdOPLServiceHistory').val(),
                                connId: $('#ConnId').val()
                            },
                            success: function (data) {
                                $('#partModal').modal('hide');
                                t.fnDraw();
                                $('#SubTotal').val(data.SubTotal);
                                $("#SubTotal").formatCurrency();
                                $('#PPNTax').val(data.PPNTax);
                                $("#PPNTax").formatCurrency();
                                $('#PPHTax').val(data.PPHTax);
                                $("#PPHTax").formatCurrency();
                                $('#TotalIncludeTax').val(data.TotalIncludeTax);
                                $("#TotalIncludeTax").formatCurrency();
                                bootstrap_alert.success("The data has been successfully added");
                                setTimeout(function () { confirm = 0; }, 3000);
                            }
                        });
                    } else {
                        confirm = 1;
                        var getUrlEditPart = '@Url.Action("EditPart", "OPLServiceHistory")';
                        $.ajax({
                            type: "POST",
                            url: getUrlEditPart,
                            cache: false,
                            data: {
                                idOPLSHistoryParts: idOPLSHistoryParts,
                                partCode: partCode,
                                partName: partName,
                                typeOfAction: typeOfAction,
                                quantity: quantity,
                                amount: amount,
                                partppntax: partPPnTax,
                                partpphtax: partPPhTax,
                                partRemarks: partRemarks,
                                idOPLServiceHistory: $('#IdOPLServiceHistory').val(),
                                connId: $('#ConnId').val()
                            },
                            success: function (data) {
                                $('#partModal').modal('hide');
                                t.fnDraw();
                                $('#SubTotal').val(data.SubTotal);
                                $("#SubTotal").formatCurrency();
                                $('#PPNTax').val(data.PPNTax);
                                $("#PPNTax").formatCurrency();
                                $('#PPHTax').val(data.PPHTax);
                                $("#PPHTax").formatCurrency();
                                $('#TotalIncludeTax').val(data.TotalIncludeTax);
                                $("#TotalIncludeTax").formatCurrency();
                                bootstrap_alert.success("The data has been successfully saved");
                                setTimeout(function () { confirm = 0; }, 3000);
                            }
                        });
                    }


                }
            });



        });

        $('#itemModal').on('hidden.bs.modal', function () {
            $('#itemForm').parsley('reset');
        });

        $('#partModal').on('hidden.bs.modal', function () {
            $('#partForm').parsley('reset');
        });

        function LoadSupplier() {
            // datatable
            var oTable = null;
            $('#supplier-lookup').each(function () {
                oTable = $(this).dataTable({
                    "bServerSide": true,
                    "bProcessing": true,
                    "bRetrieve": true,
                    "sAjaxSource": "@Url.Action("SupplierListLookUp", "OPLServiceHistory")",
                    "sDom": "<'row'<'col-sm-6'l><'col-sm-6'f>r>t<'row'<'col-sm-6'i><'col-sm-6'p>>",
                    "sPaginationType": "full_numbers",
                    "aoColumns": [
