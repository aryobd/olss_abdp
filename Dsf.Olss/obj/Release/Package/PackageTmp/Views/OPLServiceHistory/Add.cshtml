                                      .on('blur', function () { $(this).formatCurrency(); });
            $(".numbersOnly").on('keydown', numbersOnly);

            $('#ServiceDate').val('');

            $('#itemForm').parsley();
            var counter = 1;

            $('#itemForm').submit(function (e) {
                e.preventDefault();
                if ($('#itemForm').parsley('isValid')) {

