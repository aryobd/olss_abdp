                        "mData": "MonthlyMileage",
                        "fnRender": function (aObj) {
                            if (aObj.aData["MonthlyMileage"] != null) {
                                return "<div class='text-right'>" + aObj.aData["MonthlyMileage"] + "</div>";
                            }
                            return null;
                        }
