    <script>
        $('.datepicker-input').datepicker({
            format: 'mm/dd/yyyy',
            minViewMode: 0,
            startView: 0,
            endDate: '12/31/9999',
            startDate: '01/01/1753'
        });
        $.connection.hub.start().done(function () {
            var myClientId = $.connection.hub.id;
            $('#ConnId').val(myClientId);
        });

        $(".numbersOnly").on('keydown', numbersOnly);
        $("input[type=text].currenciesOnly").on('keydown', currenciesOnly)
            .on('blur', function () {
                $(this).formatCurrency();
            });
        $footer = $('.panel-footer');
        $button = $footer.find("[name='statusButton']");

        $(document).ready(function () {
            $('#Customer_BusinessEconomySector').val($('option:selected', $('select#Customer_idCustomerBusinessSector')).text());
            $("select#Customer_idCustomerBusinessSector").change(function () {
                $('#Customer_BusinessEconomySector').val($('option:selected', $(this)).text());
            });
           
            for (i = 0 ; i < $button.length; i++) {
                $button[i].tabIndex = 73 + i;
            }
            $('#Customer_OverdueNumber').keydown(function (e) {
                var keyCode = e.keyCode || e.which;
                if (keyCode == '9') {
                    $('#customertab li:eq(1) a').tab('show');
                }
            });
            $('#Customer_IADHEUnit').keydown(function (e) {
                var keyCode = e.keyCode || e.which;
                if (keyCode == '9') {
                    $('#customertab li:eq(2) a').tab('show');
                }
            });
        });
    </script>
